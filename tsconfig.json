{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./.build",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["src/types"],
    "target": "ES2020",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
